{
  "manifest_version": 3,
  "name": "FF Readwise Translator Plugin",
  "version": "1.0.0",
  "description": "Translate Readwise highlights inline using Gemini, OpenAI, or OpenRouter.",

  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Readwise Translator",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "ffreadwise-translator-plugin@mrsarac",
      "strict_min_version": "109.0",
      "update_url": "https://raw.githubusercontent.com/mrsarac/ffreadwise-translator-plugin/main/dist/updates.json"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://readwise.io/bookreview/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
