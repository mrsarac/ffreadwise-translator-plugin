{
  "manifest_version": 3,
  "name": "FF Readwise Translator Plugin",
  "version": "1.0.0",
  "description": "Translate Readwise highlights inline using Gemini, OpenAI, or OpenRouter.",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://api.openai.com/*",
    "https://openrouter.ai/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_title": "Readwise Translator",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://readwise.io/bookreview/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
